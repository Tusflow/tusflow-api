{
	"compilerOptions": {
		// Path aliases
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},

		// Type checking
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
